{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "swagger": {
    "entryFile": "./src/index.ts",
    "outputDirectory": "./swagger",
    "yaml": false
  },
  "routes": {
    "entryFile": "./src/index.ts",
    "routesDir": "./routes"
  },
  "controller": {
    "baseDir": "./src/controllers",
    "routesDir": "./routes"
  },
  "securitySchemes": {
    "bearerAuth": {
      "type":"http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  },
  "servers": [
		{
			"url": "http://localhost/4000/api/v1",
			"description": "API Routes"
		}
	]
}
